import axios from 'axios';

const api = axios.create({
  baseURL: process.env.REACT_APP_API_URL, // This fetches the base URL from the .env file
});

// Interceptor for authentication (optional)
api.interceptors.request.use((config) => {
  const token = localStorage.getItem('token');
  if (token) {
    config.headers.Authorization = `Bearer ${token}`; // Add token if it exists
  }
  return config;
});

export default api;
